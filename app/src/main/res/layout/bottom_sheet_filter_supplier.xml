<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    android:paddingBottom="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal" >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogFilterSupplier_btnReset"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/red"
            android:letterSpacing="0"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="Reset Filter"
            tools:ignore="hardcodedText" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogFilterSupplier_btnApply"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            app:cornerRadius="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/green"
            android:letterSpacing="0"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="Apply"
            tools:ignore="hardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="start|center"
            android:fontFamily="@font/poppins_bold"
            android:text="City"
            tools:ignore="hardcodedText" />
        <TextView
            android:id="@+id/dialogFilterSupplier_txtCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="end|center"
            android:fontFamily="@font/poppins_regular"
            android:text="City"
            tools:ignore="hardcodedText" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogFilterSupplier_btnSelectCity"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="end|top"
            app:cornerRadius="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:strokeColor="@color/white"
            android:letterSpacing="0"
            android:textColor="@color/blue"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="Select"
            tools:ignore="hardcodedText"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Sort by"
            tools:ignore="hardcodedText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialogFilterSupplier_btnName"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:letterSpacing="0"
                android:text="Name"
                android:textColor="@color/grey"
                app:cornerRadius="20dp"
                app:strokeColor="@color/grey"
                tools:ignore="hardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialogFilterSupplier_btnCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="10dp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/grey"
                android:letterSpacing="0"
                android:textColor="@color/grey"
                android:text="City"
                tools:ignore="hardcodedText"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialogFilterSupplier_layoutOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Order"
            tools:ignore="hardcodedText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialogFilterSupplier_btnOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="10dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/blue"
                android:letterSpacing="0"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="A-Z"
                tools:ignore="hardcodedText"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>