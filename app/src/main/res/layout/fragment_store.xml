<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StoreFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:text="@string/search" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <EditText
                android:id="@+id/manageStore_etSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/image_background"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />
            <ImageView
                android:id="@+id/manageStore_btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_search" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/manageStore_btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/blue"
            android:contentDescription="filter"
            tools:ignore="hardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/manageStore_layoutEmptyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone" >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_empty_box" />
        <TextView
            android:id="@+id/manageStore_msgEmptyItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:textSize="16sp"
            android:text="Daftar Kategori masih kosong. Tambah Kategori untuk kemudahan mengorganisir inventory" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/manageStore_btnAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/green"
            android:drawableLeft="@drawable/ic_add"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:text="ADD STORE" />
    </LinearLayout>
    <TextView
        android:id="@+id/manageStore_txtNoItemMatches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No item matches the search keyword."
        tools:ignore="hardcodedText"
        android:visibility="gone" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manageStore_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:paddingBottom="80dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="70dp"
        android:clipToPadding="false" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/manageStore_fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:backgroundTint="@color/blue"
        app:tint="@color/white"
        android:src="@drawable/ic_add" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>